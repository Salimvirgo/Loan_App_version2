<div class="container" style="margin-top:100px">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-12 col-xl-10">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                    
                    <div class="row">
                        
                        <div class="col-lg-6 d-none d-lg-flex" style="width: 487px;padding-right: 0px;"><img src="/images/orangelogo.png" style="width: 524px;"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                
                                <div class="text-center">
                                    
                                    <h4 class="text-dark mb-4">Welcome to Orange Sim Kredit App</h4>
                                </div>
                                <%- include('partials/messages') %>
                               
                                <form action= "/login" method="post" class="user">
                                    <div class="form-group">
                                        <input 
                                        class="form-control form-control-user" 
                                        type="name"  
                                        aria-describedby="usernameHelp" 
                                        placeholder="Enter Username ......" 
                                        name="username"
                                        value="<%- typeof username != 'undefined' ? username : '' %>">
                                    </div>
                                    <div class="form-group">
                                        
                                        <input 
                                        class="form-control form-control-user" 
                                        type="password" 
                                        
                                        id="showPass" 
                                        placeholder="Password" 
                                        name="password"
                                        value="<%- typeof password != 'undefined' ? password : '' %>">
                                       
                                        
                                    </div>
                                   
                                    <hr>
                                    <button class="btn btn-primary btn-block text-white btn-user" type="submit" style="background: rgb(255,102,0);">Login</button>
                                    
                                </form>
                                
                                <div class="text-center"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
 